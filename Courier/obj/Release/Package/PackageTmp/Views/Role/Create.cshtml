@model LTMSV2.Models.RoleMasterVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $("#RoleName").focus();
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#btnsave").click(function () {
            if ($("#RoleName").val() == "") {
                $("#alert").show();
                return false;

            }
            else {
                $("#alert").hide();
                return true;
            }
        });
    });
</script>


<section class="content-header">
    <h1 class="headingfont">Role</h1>
</section>

<section class="content">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
    <fieldset>
        


        <div class="row no-margin">
             <div class="col-md-3">
            <label class="required headinglabel">Role Name</label>
       
            @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control txttarget" })
            @Html.ValidationMessageFor(model => model.RoleName)
             </div>
             <div class="col-md-3">
                 <label class="headinglabel required">Type</label>
                 @Html.DropDownList("Type", new List<SelectListItem>
             {
                 new SelectListItem{ Text="Employee", Value = "Employee" },
                 new SelectListItem{ Text="Agent", Value = "Agent" },
                 new SelectListItem{ Text="Customer", Value = "Csutomer" }                 

              }, "Select", new { @class = "form-control" })

                             
                 @Html.ValidationMessageFor(model => model.Type)

             </div>
        </div>
     
       <div class="row no-margin" style="padding-top:10px">
           <div class="col-md-12 btn-right">
            <input type="submit" value="Save" class="btn btn-primary btnwidth" id="btnsave" />
  &nbsp; 
                   
           <a href='@Url.Action("Index", "Role", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
               </div>
        </div>
    </fieldset>
}

    </section>



