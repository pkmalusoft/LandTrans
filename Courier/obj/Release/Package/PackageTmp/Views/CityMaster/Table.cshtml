@model IEnumerable<LTMSV2.Models.CODReceiptVM>
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
}

<thead>
    <tr>
        <th>
            Receipt No.
        </th>
        <th>
            Receipt date
        </th>
        <th>
            Agent Name
        </th>
        <th>
            Amount
        </th>

        <th width="5%"></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AgentName)
            </td>
            <td style="text-align:right">
                @Html.DisplayFor(modelItem=>item.allocatedtotalamount)
            </td>
            <td style="font-size:13px">
                @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                <a target="_blank" href="InvoicePrint?id=@item.ReceiptID"><i class="fa fa-print"></i></a>

                <a href="Details?id=@item.ReceiptID"><i class="fa fa-eye"></i></a><br />

                <a href="Create?id=@item.ReceiptID"><i class="fa fa-pencil"></i></a>

                <a href="#" onclick="Delete(@item.ReceiptID)"><i class="fa fa-times"></i></a>

            </td>
        </tr>
    }
</tbody>
<script type="text/javascript">
        function Delete(ID) {
            if (confirm("Are you sure? You want to Delete this Invoice?")) {
                window.location.href = "/CustomerInvoice/DeleteConfirmed/?id=" + ID;
            }
        }
</script>

