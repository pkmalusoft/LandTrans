@model LTMSV2.Models.CustmorVM

@{
                /**/

                ViewBag.Title = "Approve Credit Customer";
                Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}

<script src="~/Content/NewCSS/plugins/jQuery/moment.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/js/bootstrap-datetimepicker.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/css/bootstrap-datetimepicker.min.css" />
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 765px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .headinglabel {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>

<script type="text/javascript">
   
    $(document).ready(function () {
       

       
    });
</script>

<script type="text/javascript">
   
</script>
<section class="content-header">
    <h1 class="headingfont">Approve Credit Customer</h1>

</section>




<section class="content">

    @using (Html.BeginForm("ApproveCustomer", "CustomerMaster", new { @name = "Myform", @id = "Myform" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


    <div class="searchdiv  sm-width">
        <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
        <fieldset>
            <input type="hidden" name="CustomerID"id="CustomerID"  value="@Model.CustomerID"/>
            <div class="row no-margin">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label >Customer Name</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control ", @readonly = "readonly" })
                    </div>
                </div>


               
                <div class="form-group row">
                    <div class="col-md-3">
                        <label >Phone</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control ", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label >Address</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" value="@Model.Address1, @Model.Address2, @Model.Address3" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label >Country</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" value="@Model.CountryName" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="required">Customer Type</label>
                    </div>
                    <div class="col-md-9">
                        @Html.HiddenFor(model => model.CustomerID)
                        @Html.DropDownList("CustomerType", new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Credit", Value = "CR" },
                        new SelectListItem{ Text="Cash", Value = "CS" },
                        new SelectListItem{ Text="CoLoader", Value = "CL" },
                        new SelectListItem{ Text="COD", Value = "CD" },

                     }, "Select", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label >Approved By</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" value="@Model.ApprovedUserName" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Approved On</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" value="@Model.ApprovedOn" readonly/>
                    </div>
                </div>
            </div>
            <div class="row no-margin" style="padding-top:10px">
                <div class="col-md-12" style="text-align:right;padding:10px;">

                    <input type="submit" value="Save" class="btn btn-primary btnwid" id="btnsave" />

                    &nbsp;

                    <a href='@Url.Action("CustomerList", "CustomerMaster", new { id = 0 })' class="btn btn-danger btnwid" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

                </div>
            </div>


        </fieldset>
    </div>
    }

</section>

