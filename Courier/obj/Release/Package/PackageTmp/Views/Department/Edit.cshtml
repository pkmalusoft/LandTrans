@model LTMSV2.Models.DepartmentVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}




<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Department").focus();

        $("#btnsave").click(function () {
            var dep = $("#Department").val();

            if (dep == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });

    });

 </script>

<section class="content-header">
    <h1 class="headingfont">Department - Modify</h1>

</section>


<section class="content">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
     <div class="row no-margin"> 
               
             <div class="col-md-3">
                          <label class="headinglabel required">Department</label>
                 @Html.HiddenFor(model=>model.DepartmentID)
                   @Html.TextBoxFor(model => model.Department, new {@class="form-control txttarget" })
            @Html.ValidationMessageFor(model => model.Department)
                     
                 </div>
      

          


         </div>


       
          


         <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12 btn-right">
                       <input type="submit" value="Update" class="btn btn-primary btnwidth" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "Department", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here" style="margin-left:5px;">Cancel</a>
                               
                        </div>
                    </div>

    </fieldset>
}

