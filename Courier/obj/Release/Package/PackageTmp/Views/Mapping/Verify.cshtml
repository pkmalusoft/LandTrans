                   <div class="col-md-4"> 
                       
                       @Html.ActionLink("Update", "ImportData", "Mapping", new {@class="btn btn-primary Update" })&nbsp;&nbsp; <a href="/Home/Index" class="btn btn-primary">Cancel</a> </div> 

                  
