                    @Html.ValidationMessageFor(model => model.ForwardingCharge)

                </div>

                 <div class="col-md-3">
                    <label class="headinglabel required">Revised Charge</label>
                    @Html.TextBoxFor(model => model.RevisedRate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RevisedRate)

