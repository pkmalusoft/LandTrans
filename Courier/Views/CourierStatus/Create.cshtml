@model LTMSV2.Models.CourierStatusVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}

 

<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#Name").focus();

        $("#btnsave").click(function () {
            var dep = $("#Name").val();

            if (dep == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });
    });

 </script>

<section class="content-header">
    <h1 class="headingfont">Shipment Status Master - Create</h1>

</section>


<section class="content">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>  
        <div class="searchdiv sm-width">
        <div class="row no-margin">

            <div class="col-md-12">
                <label class="headinglabel required">Name</label>
                @Html.TextBoxFor(model => model.CourierStatus, new { @class = "form-control txttarget" })
                @Html.ValidationMessageFor(model => model.CourierStatus)

            </div>

            <div class="col-md-12">
                <label class="headinglabel required">Code</label>
                @Html.TextBoxFor(model => model.StatusCourier, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourierStatus)

            </div>
            <div class="col-md-12">
                <label class="headinglabel required">Status Type</label>
                @Html.DropDownListFor(model => model.StatusTypeID, new SelectList(@ViewBag.statustype, "ID", "Name"), "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusTypeID)

            </div>



        </div>


       
          


         <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12 btn-right">
                      <input type="submit" value="Save" class="btn btn-primary btnwidth" data-toggle="tooltip" title="Click here" id="btnsave" />
                               
                          
                        
                          <a href='@Url.Action("Index", "StatusType", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here" style="margin-left:5px;">Cancel</a>
                               
                        </div>
                    </div>
                    </div>

    </fieldset>
}
    </section>

