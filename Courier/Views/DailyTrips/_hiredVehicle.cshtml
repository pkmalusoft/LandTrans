            },
            select: function (e, i) {
                e.preventDefault();
                $("#TDcontrolAcHead").val(i.item.label);
                $('#TDcontrolAcHeadID').val(i.item.Id);
            },

        });
        $('#FormHired').validate({ // initialize the plugin
            rules: {
                TDDate: {
                    required: true,

