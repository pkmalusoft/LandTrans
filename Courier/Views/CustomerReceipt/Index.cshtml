<section class="content-header" style="margin-bottom:20px">
    <h1 class="headingfont">Customer Receipt</h1>
    @if (ViewBag.SuccessMsg != null)
    {
        <script type="text/javascript">
           $(document).ready(function () {
               $.notify("@ViewBag.SuccessMsg ", "success");
           });
        </script>
    }
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="row d-flex">


            <div class=" col-md-1  search_field">
                <label for="FromDate" class="col-3 control-label">From</label>                
                @Html.TextBoxFor(mode => mode.FromDate, new { @class = "form-control text-right" })
            </div>
            <div class=" col-md-1 search_field">
                <label for="FromDate" class="col-3 control-label">To</label>                
                @Html.TextBoxFor(mode => mode.ToDate, new { @class = "form-control text-right" })
            </div>
            <div class=" col-md-1 search_field">
                <label for="Receipt No." class="col-3 control-label">Receipt No.</label>
                @Html.TextBoxFor(mode => mode.ReceiptNo, new { @class = "form-control text-right" })
            </div>
            <div class="col-md-2 m-top">                
                <button type="submit" class="btn btn-success" style="min-width:50px!Important;"><i class="fa fa-refresh" aria-hidden="true"></i></button>
            </div>            

            <div class="m-top text-md-right text-right m-top" style="margin-bottom:10px;">
                @if (@LTMSV2.Models.CommanFunctions.CheckCreateEntryValid() == false || !isadd)
                {
                    @Html.ActionLink("Create New", "Create", null, new { @disabled = "disabled", @class = "btn btn-primary btn-sm waves-effect waves-light" })
                }
                else
                {
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm waves-effect waves-light" })
                }


            </div>
        </div>
        <div class="table-responsive tblbackground" style="padding:15px;margin-top:20px">
            <table class="table table-responsive table-bordered tblfont" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            Receipt No.
                        </th>
                        <th>
                            Receipt Date
                        </th>                        
                        <th>
                            Customer Name
                        </th>
                        <th>Particulars</th>
                        <th>Payment Mode</th>
                        <th>Amount</th>
                        <th width="15%"></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Receipt No
                        </th>
                        <th>
                            Receipt Date
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>Particulars</th>
                        <th>
                            Payment Mode
                        </th>
                        <th>Amount</th>
                        <th style="display:none"></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentNo)
                        </td>
                        <td>
                            @LTMSV2.Models.CommanFunctions.GetShortDateFormat(item.RecPayDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PartyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentMode)
                        </td>
                        <td style="text-align:right">
                            @LTMSV2.Models.CommanFunctions.GetFormatNumber(item.Amount, @_decimal)

                        </td>
                        <td>

                            @if (ismodify)
                            {
                                <a href='@Url.Action("Create", "CustomerReceipt", new { id = item.RecPayID })' data-toggle="tooltip" data-placement="left" title="Click here"><i class="fa fa-pencil"></i></a>
                            }
                            |
                            @if (isdelete)
                            {
                                <a href="#" onclick="DeleteCustomer(cid=@item.RecPayID)"><i class="fa fa-times-circle"></i></a>
                            }
                            |
                            @if (isprint)
                            {
                                <a href="#"><i class="fa fa-print " aria-hidden="true" onclick="funExportToPDF(@item.RecPayID)"></i></a>
                            }

                            @*@if (isprint)
            {

                <a href="#"><i class=" fa fa-file-pdf-o print" style="color:red"></i></a>
            }*@

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    }



  



<script type="text/javascript">
