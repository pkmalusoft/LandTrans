@model IEnumerable<LTMSV2.Models.RevenueUpdateMasterVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}

<style>
    tfoot {
        display: table-header-group;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>
<section class="content-header">
    <h1 class="headingfont">Revenue Cost</h1>

</section>
<div class="col-md-12">
    <p class="indexbtnpadding pull-right">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btnwidth" })
    </p>
</div>
<div class="clearfix"></div>


<section class="content">
    @if (TempData["SuccessMsg"] != null)
    {       
        <script type="text/javascript">
                      $(document).ready(function () {
                          $.notify("@TempData["SuccessMsg"]", "success");
                });
        </script>
    }
    <div class="table-responsive tblbackground" style="padding:15px">
        <table class="table table-responsive table-bordered tblfont" id="dataTables-example" style="width:100%">
            <thead>
                <tr>      
                    <th width="5%">
                        @Html.Label("Consignment Note")
                    </th>
                    <th width="5%">
                        @Html.Label("Consignment Date")
                    </th>
                    <th width="10%">
                        @Html.Label("Invoice To")
                    </th>
                    <th width="5%">
                        @Html.Label("Amount")
                    </th>
                    <th width="5%">
                        @Html.Label("Currency")
                    </th>
                    <th width="15%" >
                        @Html.Label("Debit Head")
                    </th>
                    <th width="15%">
                        @Html.Label("Credit Head")
                    </th>
                    <th width="5%">Action</th>
                </tr>

            </thead>
            <tfoot>
                <tr>
            <tfoot>
                <tr>
                    <th>
                        @Html.Label("Consignment Note")
                    </th>
                    <th>
                        @Html.Label("Consignment Date")
                    </th>
                    <th class="">
                        @Html.Label("Invoice To")
                    </th>
                    <th>
                        @Html.Label("Amount")
                    </th>
                    <th>
                        @Html.Label("Currency")
                    </th>
                    <th >
                        @Html.Label("Debit Account")
                    </th>
                    <th>
                        @Html.Label("Credit Account")
                    </th>
                    <th>

                    </th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    @*<td>
            @Html.DisplayFor(modelItem => item.RCCode)

        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.ConsignmentNo)
                    </td>
                    <td class="text-right">                        
                        @LTMSV2.Models.CommanFunctions.GetShortDateFormat(@item.ConsignmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoicedTo)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Currency)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.DebitAccountName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditAccountName)
                    </td>
                    <td>
                        <a href="@Url.Action("Create", new { id = item.ID })"><i class="fa fa-pencil"></i></a>|
                        <a href="#" onclick="Delete(ID=@item.ID)"><i class="fa fa-times"></i></a>
                    </td>
                </tr>

                }
            </tbody>

        </table>
    </div>
</section>



<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete Country?")) {
            window.location.href = "/RevenueCost/DeleteConfirmed/?id=" + ID;
        }
    }
</script>