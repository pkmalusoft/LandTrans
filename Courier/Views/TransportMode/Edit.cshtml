@model LTMSV2.Models.TransportModeVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#TransportModeName").focus();
      

        $("#btnsave").click(function () {
            var tran = $("#TransportModeName").val();
         


            if (tran == "") {
                $("#validations").show();
                return false;
            }
        
            else {
                $("#validations").hide();
                return true;
            }
        });


    });
</script>

<section class="content-header">
    <h1 class="headingfont">Transport  Mode - Modify</h1>

</section>




<section class="content">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      <div id="validations" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
    <fieldset>
        

       <div class="row no-margin"> 
               
     

         <div class="col-md-3">
              @Html.HiddenFor(model => model.TransportModeID)
                          <label class="headinglabel required">Transport Mode</label>
                 @Html.TextBoxFor(model => model.TransportModeName,new { @class = "form-control txttarget" })
            @Html.ValidationMessageFor(model => model.TransportModeName)
                     
                 </div>

            
           </div>
          
         
        <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12 btn-right">
                           
                              <input type="submit" value="Save" class="btn btn-primary btnwidth" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "MovementType", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

                               
                          
                        </div>
            </div>
    </fieldset>
}

