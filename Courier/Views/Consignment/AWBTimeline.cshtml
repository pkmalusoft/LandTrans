@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
    <section class="content-header">
        <div class="row">
            <div class="col-md-5 pull-left">
                <h1 class="headingfont">AirWay Bill Time Line</h1>
            </div>
            </div>
            </section>
	<style>
		ul{
			list-style: none;
			padding:0;
		}
		.timelineLeft{
			padding-right: 4px;
		}
		.timelineRight{
			padding-left: 4px;
		}
		.timelineRow h4{
			font-size:15px;
			font-weight: bold;
		}
		
		.timelineRow::before{
			content:'';
			position: absolute;
			width:8px;
			height:100%;
			left:0;
			right:0;
			display: block;
			margin:auto;
			background: #222;
		}
		.timelineRow li{
			position: relative;
			margin-bottom: 20px;
			padding-right: 10px;
			padding-top:5px;
		}
		.timelineRight li{
			padding-left: 10px;
		}
		.timelineRow li:after{
			content:'';
			height:7px;
			display: block;
			text-align: right;
			position: absolute;
		}
		.timelineRow li:nth-of-type(1):after {
				background:#fb9643;
				width:100px;
		}
		.timelineRow li:nth-of-type(2):after {
				background:#4bacc6;
				width:140px;
		}
		.timelineRow li:nth-of-type(3):after {
				background:#8064a2;
				width:180px;
		}
		.timelineRow li:nth-of-type(4):after {
				background:#a1c557;
				width:210px;
		}
		.timelineRow li:nth-of-type(5):after {
				background:#ce504c;
				width:230px;
		}
		
		.timelineLeft li::after{
			right:0;
		}
		.timelineRight li::after{
			left: 0;
		}
		.timelineBlock{
			padding:50px 0;
			
		}
		.timelineRow{
			float:none;
			display:block;
			margin:auto;
			}
		
	</style>

	<section class="timelineBlock">
		<div class="container-fluid">
		<div class="row">
		<div class="col-md-4 timelineRow">
		<div class="timelineLeft col-md-6 text-right">
			<ul>
