      <tfoot>
          <tr>
              <th>
                  @Html.Label("Employee Code")
              </th>

              <th class="form-100">
                  @Html.Label("Employee Name")
              </th>
              <th>
                  @Html.Label("Designation")
              </th>
              <th>
                  @Html.Label("Email")
              </th>

              <th style="display:none"></th>
          </tr>
    </tfoot>



    

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Designation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>


    <td>
        <a href="@Url.Action("Edit", new { id = item.EmployeeID })"><i class="fa fa-pencil"></i></a>  |

        <a href="#" onclick="Delete(ID=@item.EmployeeID)"><i class="fa fa-times"></i></a>
    </td>
</tr>
}

</table>
        </div>
    </section>

<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete Employee?")) {
            window.location.href = "/EmployeeMaster/DeleteConfirmed/?id=" + ID;
        }
    }
</script>